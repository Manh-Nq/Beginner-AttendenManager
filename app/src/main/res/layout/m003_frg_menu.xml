<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorWhite"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/d_16"
                android:src="@drawable/ic_android_black_24dp"
                android:tint="@color/colorWhiteAlpha" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_logo_company" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_signout"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/d_16"
                android:src="@drawable/ic_power"
                android:tint="@color/colortvLogo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/ln_diem_danh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_item"
                android:orientation="vertical"
                android:padding="@dimen/d40">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_account"
                    android:tint="@color/colortvLogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:text="class"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_item"
                android:orientation="vertical"
                android:padding="@dimen/d40">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:src="@drawable/ic_baseline_access_time"
                    android:tint="@color/colortvLogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:text="History"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />
            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/ln_attendance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_item"
                android:orientation="vertical"
                android:padding="@dimen/d40">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:src="@drawable/qr_code"
                    android:tint="@color/colortvLogo" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:text="Attendance"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />
            </LinearLayout>


        </TableRow>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_load_data"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>