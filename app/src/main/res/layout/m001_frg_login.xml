<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray">

    <include layout="@layout/m001_actionbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/d_56">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_10"
                android:src="@drawable/ic_android" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_10"
                android:src="@drawable/gray_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="the best android training organization " />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/d_16"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_edt">

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Email"
                    android:maxLength="50"
                    android:paddingHorizontal="@dimen/d_10"
                    android:singleLine="true">

                    <requestFocus />
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/d_16"
                android:layout_marginTop="@dimen/d_10"
                android:background="@drawable/bg_edt">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/d_10"
                    android:layout_weight="1"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:paddingHorizontal="@dimen/d_10"
                    android:singleLine="true">

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/iv_show_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/d_10"
                    android:src="@drawable/bg_show_password" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/d_16"
                android:layout_marginTop="@dimen/d_16">

                <CheckBox
                    android:id="@+id/cb_save_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d_10"
                    android:text="Save your account"
                    android:textSize="@dimen/d_16" />
            </TableRow>


            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginHorizontal="@dimen/d_16"
                android:layout_marginTop="@dimen/d40"
                android:background="@drawable/bg_green_bt"
                android:text="Login"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_14" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_16"
                android:text="Do not have an account, click here"
                android:textSize="@dimen/d_16" />


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/d_86"
        android:layout_height="@dimen/d_86"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</RelativeLayout>