<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/d_50"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d_10"
            android:padding="@dimen/d_10"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TechJa"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_20">

                <ImageView
                    android:layout_width="@dimen/d_50"
                    android:layout_height="match_parent"
                    android:padding="@dimen/d_5"
                    android:src="@drawable/ic_command_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/d_16"
                        android:layout_marginTop="@dimen/d_10"
                        android:text="Class Name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_14"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_name_009"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_16"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_16" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/d_50"
                    android:layout_height="match_parent"
                    android:padding="@dimen/d_5"
                    android:src="@drawable/ic_dayhoc" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/d_16"
                        android:layout_marginTop="@dimen/d_10"
                        android:text="Coach"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_coach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_16"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_16" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/d_50"
                    android:layout_height="match_parent"
                    android:padding="@dimen/d_5"
                    android:src="@drawable/ic_history" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/d_16"
                        android:layout_marginTop="@dimen/d_10"
                        android:text="Description"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_16"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_16" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/d_50"
                    android:layout_height="match_parent"
                    android:padding="@dimen/d_5"
                    android:src="@drawable/ic_oclock" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/d_16"
                        android:layout_marginTop="@dimen/d_10"
                        android:text="Duration"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_16"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_16" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/d_50"
                    android:layout_height="match_parent"
                    android:padding="@dimen/d_5"
                    android:src="@drawable/ic_nag" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_16"
                        android:layout_marginTop="@dimen/d_10"
                        android:text="Supporter"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_supporter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_16"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_16" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/d_50"
                    android:layout_height="match_parent"
                    android:padding="@dimen/d_5"
                    android:src="@drawable/ic_used_computer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/d_16"
                        android:layout_marginTop="@dimen/d_10"
                        android:text="Modul"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_modul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_16"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/d_16" />

                </LinearLayout>
            </TableRow>


        </LinearLayout>
    </ScrollView>
</LinearLayout>