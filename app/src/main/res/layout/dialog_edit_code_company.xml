<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorGreenAlpha"
    android:orientation="vertical"
    android:padding="@dimen/d_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Code Company"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/d_30" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_20"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="@dimen/d_50"
            android:layout_height="50dp"
            android:padding="@dimen/d_13"
            android:src="@drawable/ic_qr2" />

        <EditText

            android:id="@+id/edt_code_attendance_002"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="code attendance"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_16" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_20"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="@dimen/d_50"
            android:layout_height="50dp"
            android:padding="@dimen/d_13"
            android:src="@drawable/ic_location"
            android:tint="@color/colorRed" />

        <EditText

            android:id="@+id/edt_latitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="latitude"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_16" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_20"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="@dimen/d_50"
            android:layout_height="50dp"
            android:padding="@dimen/d_13"
            android:src="@drawable/ic_location"
            android:tint="@color/colorRed" />

        <EditText

            android:id="@+id/edt_longitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="longitude"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_16" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_20"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="@dimen/d_50"
            android:layout_height="50dp"
            android:padding="@dimen/d_13"
            android:src="@drawable/ic_size" />

        <EditText
            android:id="@+id/edt_range_002"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="new size"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_16" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/d_10">

        <TextView
            android:id="@+id/tv_cancel_002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_25" />

        <TextView
            android:id="@+id/tv_ok_002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_20"
            android:layout_marginRight="@dimen/d_10"
            android:text="OK"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_25" />
    </TableRow>

</LinearLayout>