<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:id="@+id/ln_profile"

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/d_50"
            android:padding="@dimen/d_10"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Techja"
            android:textColor="@color/colorblack"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/d_50"
            android:padding="@dimen/d_10"
            android:layout_height="0dp"
            android:src="@drawable/ic_back"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/d_16"
        android:layout_marginTop="@dimen/d_10"
        android:text="Tech Ja"
        android:textColor="@color/colorblack"
        android:textSize="@dimen/d_20"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/d_16"
        android:text="The best android training organization "
        android:textSize="@dimen/d_12" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/d_16"
        android:layout_marginTop="@dimen/d_16"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/d_50"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_command_1" />

        <TextView
            android:id="@+id/tv_code_002"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/d_20"
            android:text="11111996"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_14" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorVioletAlpha" />

    <TableRow

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/d_16"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/d40"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            android:tint="@color/colorViolet"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d_20"
                android:text="latitude"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/d_20" />

            <TextView
                android:id="@+id/tv_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d_20"
                android:text="21.013503"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_14" />

        </LinearLayout>
    </TableRow>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorVioletAlpha" />

    <TableRow

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/d_16"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/d40"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            android:tint="@color/colorViolet"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d_20"
                android:text="longitude"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/d_20" />

            <TextView
                android:id="@+id/tv_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d_20"
                android:text="105.801932"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_14" />

        </LinearLayout>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorVioletAlpha" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/d_16"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/d40"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_range"
            android:tint="@color/colorViolet"/>

        <TextView
            android:id="@+id/tv_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/d_20"
            android:text="50m"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_20" />
    </TableRow>

    <Button
        android:id="@+id/bt_edit_002"
        android:layout_width="100dp"
        android:layout_height="@dimen/d_50"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/d_10"
        android:layout_marginRight="@dimen/d_16"
        android:background="@drawable/bg_time_history_ontime"
        android:text="edit"
        android:textColor="@color/colorViolet"
        android:textSize="@dimen/d_16" />


</LinearLayout>