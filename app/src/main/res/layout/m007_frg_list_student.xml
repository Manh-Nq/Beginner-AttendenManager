<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_bar_007"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <LinearLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ln_frg_007"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/d_50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d_10"
                android:padding="@dimen/d_10"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Student"
                android:textColor="@color/colorblack"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/d_16"
            android:layout_marginLeft="@dimen/d_16"
            android:gravity="center"
            android:text="Danh sách học viên"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_20" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d_16"
            android:layout_marginTop="@dimen/d_10"
            android:layout_marginRight="@dimen/d_16"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_class_007"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:listitem="@layout/item_m007_list_hs" />

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</RelativeLayout>