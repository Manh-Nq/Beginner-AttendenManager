<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:id="@+id/progress_load_data"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln_m005_frg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:weightSum="6">


            <ImageView
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_10"
                android:src="@drawable/ic_logo_company" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50">

                <ImageView
                    android:layout_width="@dimen/d_50"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d_16"
                    android:padding="5dp"
                    android:src="@drawable/ic_class" />

                <TextView
                    android:id="@+id/tv_class_name_005"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/d_16"
                    android:text="class name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/d_20"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginHorizontal="@dimen/d_16"
                android:layout_marginTop="@dimen/d_20"
                android:background="@color/colorBlack"
                android:padding="1dp">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colortvLogo"
                    android:gravity="center"
                    android:text="Day"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/d_16" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colortvLogo"
                    android:gravity="center"
                    android:text="hours"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/d_16" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colortvLogo"
                    android:gravity="center"
                    android:text="detail"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/d_16" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colortvLogo"
                    android:gravity="center"
                    android:text="coach"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/d_15" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colortvLogo"
                    android:gravity="center"
                    android:text="Note"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/d_16" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colortvLogo"
                    android:gravity="center"
                    android:text="edit"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/d_16" />

            </TableRow>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_time_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_day"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:orientation="vertical">



                </androidx.recyclerview.widget.RecyclerView>
            </ScrollView>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10"
                android:gravity="right">


                <Button
                    android:id="@+id/bt_more_coach"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/d_50"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_16"
                    android:background="@drawable/bg_edit_bt"
                    android:text="+Coach"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/bt_more_table"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/d_50"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_16"
                    android:background="@drawable/bg_edit_bt"
                    android:text="+Table"
                    android:textColor="@color/colorWhite" />
            </TableRow>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>