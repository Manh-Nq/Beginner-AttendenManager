<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/ln_005"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:weightSum="5">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/d_50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d_10"
                android:padding="@dimen/d_10"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TimeTable"
                android:textColor="@color/colorblack"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_m005_frg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:weightSum="6">



                <TextView
                    android:id="@+id/tv_class_name_005"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d_16"
                    android:text="class name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/d_20" />



                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="@dimen/d_10"
                        android:id="@+id/rv_time_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/d_16"
                        android:orientation="vertical"
                        tools:listitem="@layout/item_day">


                    </androidx.recyclerview.widget.RecyclerView>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_10"
                    android:gravity="right">


                    <Button
                        android:id="@+id/bt_more_coach"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/d_50"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/d_10"
                        android:layout_marginRight="@dimen/d_16"
                        android:background="@drawable/bg_time_history_ontime"
                        android:text="+Coach"
                        android:textColor="@color/colorViolet" />

                    <Button
                        android:id="@+id/bt_more_table"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/d_50"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/d_10"
                        android:layout_marginRight="@dimen/d_16"
                        android:background="@drawable/bg_time_history_ontime"
                        android:text="+Table"
                        android:textColor="@color/colorViolet" />
                </TableRow>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress_load_data"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />
</RelativeLayout>