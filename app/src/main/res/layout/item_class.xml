<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">


    <TableRow
        android:id="@+id/tb_item_class"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/d_10"
        android:layout_weight="2"
        android:background="@color/colorBlack"
        android:orientation="vertical"
        android:padding="0.1dp">

        <TextView
            android:id="@+id/tv_name_class_m004"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="Techja k1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_20" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_class_code_m004"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="TDNDZ123"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_20" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_info_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_bt_dialog_info"
            android:text="info"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_20"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_timetable_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_bt_timetable"
            android:text="timeTable"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_20"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_lisths_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_bt_lisths"
            android:text="list student"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_20"
            android:textStyle="bold" />

    </TableRow>
</LinearLayout>