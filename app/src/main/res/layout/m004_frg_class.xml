<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/progress_bar_004"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorGreen"
        android:visibility="visible" />


    <LinearLayout
        android:layout_below="@id/rvpr"
        android:id="@+id/ln_m004_frg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/d_10">

            <ImageView
                android:padding="@dimen/d_5"
                android:layout_width="@dimen/d_50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d_16"
                android:src="@drawable/ic_command_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="left"
                android:paddingLeft="@dimen/d_16"
                android:text="Danh sách lớp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_20" />


        </TableRow>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:listitem="@layout/item_class" />

                <Button
                    android:id="@+id/bt_more_m004"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/d_50"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/d_10"
                    android:background="@drawable/bg_time_history_ontime"
                    android:text="More"
                    android:textColor="@color/colorViolet" />

            </LinearLayout>

</ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rvpr"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/d_50"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d_10"
            android:padding="@dimen/d_10"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Class"
            android:textColor="@color/colorblack"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>