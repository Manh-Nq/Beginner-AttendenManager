    <resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.FULL_SCREEN" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <declare-styleable name="ViewNotification">
        <attr name="imagePath" format="integer" />
        <attr name="strockeColor" format="color" />
        <attr name="radiusClockView" format="integer" />
        <attr name="textSizeClockView" format="integer" />
        <attr name="text1" format="string" />
        <attr name="text2" format="string" />
        <attr name="text1Color" format="color" />
        <attr name="text2Color" format="color" />
    </declare-styleable>

    <declare-styleable name="myView">
        <attr name="Text" format="string"/>

    </declare-styleable>



</resources>
